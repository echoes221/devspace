{
  "name": "nodejs-server",
  "description": "Sets up a NodeJS server",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "default_attributes": {
    "nodejs": {
      "version": "0.10.38",
      "source": {
        "url": "http://nodejs.org/dist/v0.10.38/node-v0.10.38.tar.gz",
        "checksum": "513da8ed5e48abefdfab664f1cabc160238d314a0481148804aff8fc6552b78b"
      },
      "npm": {
        "version": "2.13.0",
        "install_method": "source"
      },
      "npm_packages": [{
        "name": "express",
        "action": "install"
      }, {
        "name": "bower",
        "action": "install"
      }, {
        "name": "jshint",
        "action": "install"
      }, {
        "name": "nodemon",
        "action": "install"
      }, {
        "name": "gulp",
        "action": "install"
      }, {
        "name": "mocha",
        "action": "install"
      }, {
        "name": "node-gyp",
        "action": "install"
      }, {
        "name": "pangyp",
        "action": "install"
      }]
    }
  },
  "override_attributes": {},
  "run_list": [
    "role[base]",
    "recipe[nodejs::nodejs_from_source]",
    "recipe[nodejs::npm_from_source]",
    "recipe[nodejs::npm_packages]"
  ]
}
