{
    "name": "nodejs-server",
    "description": "Sets up a NodeJS server",
    "json_class": "Chef::Role",
    "chef_type": "role",
    "default_attributes": {
        "nodejs": {
            "version": "6.7.0",
            "install_method": "source",
            "source": {
                "url": "https://nodejs.org/dist/v6.7.0/node-v6.7.0.tar.gz",
                "checksum": "02b8ee1719a11b9ab22bef9279519efaaf31dd0d39cba4c3a1176ccda400b8d6"
            },
            "npm": {
                "version": "3.10.8",
                "install_method": "source",
                "url": "http://registry.npmjs.org/npm/-/npm-3.10.8.tgz",
                "checksum": "1121a75a370fd0efb320fffb7c9e4a8bcb3840d1cf2fbd585c54837b7014dd76"
            },
            "npm_packages": [{
                "name": "express",
                "action": "install"
            }, {
                "name": "n",
                "action": "install"
            }, {
                "name": "phantomjs",
                "action": "install",
                "version": "1.9.19"
            }, {
                "name": "async",
                "action": "install"
            }, {
                "name": "bower",
                "action": "install"
            }, {
                "name": "babel",
                "action": "install"
            }, {
                "name": "jshint",
                "action": "install"
            }, {
                "name": "nodemon",
                "action": "install"
            }, {
                "name": "gulp",
                "action": "install"
            }, {
                "name": "mocha",
                "action": "install"
            }, {
                "name": "node-gyp",
                "action": "install"
            }, {
                "name": "pangyp",
                "action": "install"
            }, {
                "name": "webpack",
                "action": "install"
            }]
        }
    },
    "override_attributes": {},
    "run_list": [
        "role[base]",
        "recipe[nodejs::nodejs_from_source]",
        "recipe[nodejs::npm_from_source]",
        "recipe[nodejs::npm_packages]"
    ]
}
