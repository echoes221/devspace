{
  "name": "nodejs-server",
  "description": "Sets up a NodeJS server",
  "json_class": "Chef::Role",
  "chef_type": "role",
  "default_attributes": {
    "nodejs": {
      "version": "5.7.1",
      "source": {
        "url": "https://nodejs.org/dist/v5.7.1/node-v5.7.1.tar.gz"
      },
      "npm": {
        "version": "3.7.3",
        "install_method": "source"
      },
      "npm_packages": [{
        "name": "express",
        "action": "install"
      }, {
        "name": "bower",
        "action": "install"
      }, {
        "name": "jshint",
        "action": "install"
      }, {
        "name": "nodemon",
        "action": "install"
      }, {
        "name": "gulp",
        "action": "install"
      }, {
        "name": "mocha",
        "action": "install"
      }, {
        "name": "node-gyp",
        "action": "install"
      }, {
        "name": "pangyp",
        "action": "install"
      }]
    }
  },
  "override_attributes": {},
  "run_list": [
    "role[base]",
    "recipe[nodejs::nodejs_from_source]",
    "recipe[nodejs::npm_from_source]",
    "recipe[nodejs::npm_packages]"
  ]
}
